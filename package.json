{
  "private": true,
  "scripts": {
    "lint": "eslint --ignore-path .gitignore --ext js,md .",
    "release": "lerna publish",
    "test": "run-p test:* lint",
    "test:ava": "ava",
    "coverage": "nyc ava",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.54",
    "@babel/core": "^7.0.0-beta.54",
    "@babel/preset-env": "^7.0.0-beta.54",
    "@babel/preset-react": "^7.0.0-beta.54",
    "@babel/preset-stage-1": "^7.0.0-beta.54",
    "@babel/register": "^7.0.0-beta.54",
    "ava": "^1.0.0-beta.4",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.13",
    "cross-env": "^5.2.0",
    "del-cli": "^1.1.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^5.1.0",
    "eslint-config-concise": "^0.28.0",
    "eslint-config-concise-ava": "^0.29.0",
    "eslint-config-concise-esnext": "^0.28.2",
    "eslint-config-concise-react": "^0.28.2",
    "eslint-plugin-react": "^7.10.0",
    "husky": "^0.14.3",
    "immutable": "^3.8.2",
    "jsdom": "^11.11.0",
    "jsdom-global": "^3.0.2",
    "lerna": "^3.0.0-beta.21",
    "lint-staged": "^7.2.0",
    "npm-run-all": "^4.1.3",
    "nyc": "^12.0.2",
    "prettier-eslint-cli": "^5.0.0-beta.0",
    "raf": "^3.4.0",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-intl": "^2.4.0",
    "react-redux": "^5.0.7",
    "react-test-renderer": "^16.4.1",
    "redux": "^4.0.0",
    "redux-immutable": "^4.0.0"
  },
  "ava": {
    "require": [
      "@babel/register",
      "raf/polyfill",
      "jsdom-global/register",
      "./test/helpers/enzyme-config"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": 4
          }
        }
      ],
      [
        "@babel/preset-stage-1",
        {
          "decoratorsLegacy": true
        }
      ],
      "@babel/preset-react"
    ],
    "env": {
      "production": {
        "plugins": [
          [
            "transform-react-remove-prop-types",
            {
              "mode": "wrap"
            }
          ]
        ]
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "concise",
      "concise-esnext",
      "concise-ava",
      "concise-react"
    ],
    "rules": {
      "comma-dangle": "off"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "nyc": {
    "reporter": [
      "html",
      "lcov",
      "text"
    ]
  },
  "resolutions": {
    "eslint": "^5.1.0",
    "eslint-plugin-react": "^7.10.0",
    "eslint-plugin-jsx-a11y": "^6.0.3"
  },
  "workspaces": [
    "package",
    "examples/*"
  ],
  "name": "react-intl-redux"
}
